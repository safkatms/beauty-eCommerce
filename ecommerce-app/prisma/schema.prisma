datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


// User Model
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CUSTOMER)  // Use ENUM instead of string
  createdAt DateTime @default(now())
}

// Role Enum
enum Role {
  ADMIN
  CUSTOMER
}
